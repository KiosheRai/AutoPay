<Page x:Class="AutoPay.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoPay"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Height="auto" Content="AutoPay"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            <Button Grid.Row="1" Height="auto" Content="Drivers"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            <Button Grid.Row="2" Height="auto" Content="Mark"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            <Button Grid.Row="3" Height="auto" Content="Calculate"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </Grid>
        
    </Grid>
</Page>
